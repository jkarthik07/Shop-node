<%-include('../partials/header.ejs')%>
     <link rel="stylesheet" href="/css/product.css">
    
</head>
<body>
    <%-include('../partials/navigation.ejs')%>

    <main>
        <% if(prods.length > 0){ %>
            <h1>My products</h1>
            <div class="grid">
                <%prods.forEach((p)=>{%>
                    <article class="card product-item">
                        <header class="card__header">
                                <h1 class="product__title"><%=p.title%></h1>
                        </header>
                        <div class="card__image">
                            <img src="/<%=p.imageUrl%>" alt="<%=p.title%>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">â‚¹<%=p.price%></h2>
                            <p class="product__description"><%=p.description%></p>
                        </div>
                        <div class="card__actions">
                            <a href="/admin/edit-products/<%=p._id%>?edit=true" class="btn">Edit</a>
                            <input type="hidden" value="<%=p._id%>" name="productId">
                            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                            <button class="btn" type="button" onclick="delProd(this)">Delete</button>
                        </div>
                    </article>
                <% }) %>
            </div>
        <% } else { %>
            <h1>No Products</h1>
        <% } %>
    </main>
<%-include('../partials/footer.ejs')%>

<script src="/js/admin.js "></script>